using System;
using System.Collections.Generic;

namespace ColeccionesEjemplo
{
    class Program
    {
        static void Main(string[] args)
        {
            List<string> nombres = new List<string>();
            nombres.Add("Juan");
            nombres.Add("Ana");
            nombres.Add("Luis");

            Console.WriteLine("Lista de Nombres:");
            foreach (var nombre in nombres)
            {
                Console.WriteLine(nombre);
            }

            Dictionary<int, string> personas = new Dictionary<int, string>();
            personas.Add(145, "Juan");
            personas.Add(275, "Ana");
            personas.Add(369, "Luis");

            Console.WriteLine("\nDiccionario de Personas:");
            foreach (var persona in personas)
            {
                Console.WriteLine($"ID: {persona.Key}, Nombre: {persona.Value}");
            }

            if (personas.TryGetValue(2, out string nombrePersona))
            {
                Console.WriteLine($"\nNombre de la persona con ID 2: {nombrePersona}");
            }
        }
    }
}
