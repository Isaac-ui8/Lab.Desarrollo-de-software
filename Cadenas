using System;

class Program
{
    static void Main(string[] args)
    {
        string texto = "Hola, mundo!";

        Console.WriteLine($"Longitud: {texto.Length}");

        Console.WriteLine($"Mayúsculas: {texto.ToUpper()}");

        Console.WriteLine($"Minúsculas: {texto.ToLower()}");

        string textoReemplazado = texto.Replace("mundo", "C#");
        Console.WriteLine($"Texto reemplazado: {textoReemplazado}");

        string subcadena = texto.Substring(0, 4);
        Console.WriteLine($"Subcadena: {subcadena}");

        string textoConcatenado = texto + " ¡Bienvenido!";
        Console.WriteLine($"Texto concatenado: {textoConcatenado}");
    }
}
